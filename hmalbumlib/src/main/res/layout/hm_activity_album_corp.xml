<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_album_corp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hm_def_actionBar_Background"
                tools:context=".ui.HM_AlbumCorpActivity"
    >
    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/hm_base_toolbar_layout"/>
    <com.yb.hmalbumlib.extar.HM_ExtarCropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:scv_crop_mode="fit_image"
        custom:scv_background_color="@color/hm_black"
        custom:scv_handle_color="@color/hm_colorAccent"
        custom:scv_guide_color="@color/hm_colorAccent"
        custom:scv_overlay_color="@color/hm_overlay"
        custom:scv_frame_color="@color/hm_colorAccent"
        custom:scv_handle_size="14dp"
        custom:scv_touch_padding="8dp"
        custom:scv_handle_show_mode="show_on_touch"
        custom:scv_guide_show_mode="not_show"
        custom:scv_min_frame_size="50dp"
        custom:scv_frame_stroke_weight="1dp"
        custom:scv_guide_stroke_weight="1dp"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/corpButtomToolbar" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/corpButtomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@color/hm_def_actionBar_Background"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/buttonRotateLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/hm_ic_rotate_left_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:id="@+id/buttonRotateRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/hm_ic_rotate_right_black_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:src="@drawable/hm_ic_done_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
    </RelativeLayout>
</RelativeLayout>
